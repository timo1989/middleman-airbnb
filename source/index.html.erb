<div id="home">
  <div class="home-content">
      <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1496492254320-b16c3f10f788?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=0f5654aa2e65c01c50a2be3b3482537a&auto=format&fit=crop&w=2850&q=80');">
      <div class="banner-content">
        <h1>There's No Place Like Home</h1>
        <p>Homestays, Anywhere in the World</p>
        <div class="form">
        <form action="#">
          <label for="location">Where?</label>
          <input type="location" id="your-location" placeholder="Meguro, Tokyo">
        </form>
        </div>
        <a class="btn btn-primary btn-lg">Take Me There</a>
      </div>
    </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2>Shanghai</h2>
          </div>
        </div>
      </div>
       <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1496492254320-b16c3f10f788?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=0f5654aa2e65c01c50a2be3b3482537a&auto=format&fit=crop&w=2850&q=80');">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2>Tokyo</h2>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/bali');">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2>Bali</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

    <div class="row">
      <p class="team">
      <%= link_to "Meet the team", "team.html", class: "btn btn-primary" %>
      </p>
      <p class="about">
        <%= link_to "More about this template", "about.html" %>
      </p>
    </div>
  </div>
</div>
